<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">

      <h2 class= "header-new text-center">Host a Tour</h2>
      <!-- time is missing -->
      <%= simple_form_for (@tour) do |f|%>
      <div class="form-group form-label">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.label :location %>
        <%= f.text_field :location, class: 'form-control' %>
        <%= f.label :description%>
        <%= f.text_field :description, class: 'form-control text-field-box' %>

        <div class="row">
          <div class="col-md-6">
            <%= f.input :category, collection: Tour::CATEGORYS.keys.map(&:to_s) %>
          </div>

          <div class="col-md-6">
            <%= f.input :capacity, collection: 0..30 %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= f.input :price_euro, collection: 0..200 %>
          </div>

          <div class="col-md-6">
            <%= f.label :date %>
            <%= f.date_field :date, class: "form-control"%>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= f.label :start_time %>
            <%= f.time_field :start_time, class: "form-control" %>
          </div>

          <div class="col-md-6">
            <%= f.label :end_time %>
            <%= f.time_field :end_time, class: "form-control"%>
          </div>
        </div>
        <div class="photo-uploader form-group">
          <%= f.input :photo, label: "Upload a photo:", class: "form-control" %>
          <%= f.input :photo_cache, as: :hidden, class: "form-control" %>

        </div>
      </div>



      <div>
        <%= f.submit class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>


