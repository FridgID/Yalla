<div class="wrapper">
  <div class="container text-center">
    <h2 class="index-logo"><%= image_tag "yalla3.png", alt: "logo", size: 100 %></h2>
    <h2 class="index-header">YALLA! HURRY UP & JOIN A TOUR</h2>
    <% if @tours.count < 3 %>
      <% @tours.each do |tour| %>
        <div class="row">
          <div class="col-md-auto">
            <div class="smaller-grid " >
              <%= render 'index_tour', tour: tour %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <% @tours.each do |tour| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render 'index_tour', tour: tour %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
