<div class="wrapper">
  <div class="container text-center">
    <div class="row">
      <h2>Yalla! Hurry up & join a tour</h2>

      <% @tours.each do |tour| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to tour_path(tour), class: "custom-card-link" do %>
            <div class="card">
              <h3><%= tour.title.upcase %></h3>
            </div>
          <% end %>
        </div>
      <% end %>

    <!-- bootstrap end -->
    </div>
  </div>
</div>

