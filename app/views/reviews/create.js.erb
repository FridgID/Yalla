function refreshForm(innerHTML) {
  const newReviewForm = document.getElementById('new-review-form');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews = document.getElementById('reviews-list');
  reviews.insertAdjacentHTML('beforeend', reviewHTML);
}

<% if @review.errors.any? %>
  refreshForm('<%= j render "tours/review_form", review: @review, tour: @tour %>');
<% else %>
  addReview('<%= j render "tours/review_list_item", r: @review %>');
  refreshForm('<%= j render "tours/review_form", review: Review.new, tour: @tour %>');
<% end %>
